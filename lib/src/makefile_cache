PWD 				= /mnt/hgfs/GameEngine/lib/src
AR           		= ar cqs
CXX           		= g++
INCPATH			= -I /mnt/hgfs/GameEngine/lib/../ -I /mnt/hgfs/GameEngine/lib/include -I /mnt/hgfs/GameEngine/lib/include/cache
BINDIR				= /mnt/hgfs/GameEngine/lib/linux/
OBJDIR				= /mnt/hgfs/GameEngine/lib/linux/obj/
BIN 				= libCache.a
SOURCES			= /mnt/hgfs/GameEngine/lib/src/cache/datacache.cpp /mnt/hgfs/GameEngine/lib/src/cache/datamap.cpp /mnt/hgfs/GameEngine/lib/src/cache/table.cpp 
SOURCEFILES		= $(notdir $(SOURCES))
OBJECTS			= $(addprefix $(OBJDIR), $(patsubst %.cpp,%.o,$(SOURCEFILES)))
FLAGS				= -g3 -Wall
ARFLAGS			= 

all:makedir $(OBJECTS)
	$(AR) $(ARFLAGS) $(BIN) $(OBJECTS);

makedir:
	$(shell if [ -n "$(OBJDIR)" -a ! -e "$(OBJDIR)" ];then mkdir -p $(OBJDIR); fi)
	$(shell if [ -n "$(BINDIR)" -a ! -e "$(BINDIR)" ];then mkdir -p $(BINDIR); fi)

/mnt/hgfs/GameEngine/lib/linux/obj/datacache.o:/mnt/hgfs/GameEngine/lib/src/cache/datacache.cpp
	rm -f $@
	$(CXX)  $(FLAGS) -fpic -c $(INCPATH) $< -o $@

/mnt/hgfs/GameEngine/lib/linux/obj/datamap.o:/mnt/hgfs/GameEngine/lib/src/cache/datamap.cpp
	rm -f $@
	$(CXX)  $(FLAGS) -fpic -c $(INCPATH) $< -o $@

/mnt/hgfs/GameEngine/lib/linux/obj/table.o:/mnt/hgfs/GameEngine/lib/src/cache/table.cpp
	rm -f $@
	$(CXX)  $(FLAGS) -fpic -c $(INCPATH) $< -o $@

