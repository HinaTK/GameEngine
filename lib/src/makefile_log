PWD 				= /mnt/share/lib/src
AR           		= ar cqs
CXX           		= g++
INCPATH			= -I /mnt/share/lib/../ -I /mnt/share/lib/include -I /mnt/share/lib/include/log
BINDIR				= /mnt/share/lib/linux/
OBJDIR				= /mnt/share/lib/linux/obj/
BIN 				= libLog.a
SOURCES			= /mnt/share/lib/src/log/log.cpp /mnt/share/lib/src/log/logmanager.cpp 
SOURCEFILES		= $(notdir $(SOURCES))
OBJECTS			= $(addprefix $(OBJDIR), $(patsubst %.cpp,%.o,$(SOURCEFILES)))
FLAGS				= 

all:makedir $(OBJECTS)
	$(AR) $(FLAGS) $(BIN) $(OBJECTS);

makedir:
	$(shell if [ -n "$(OBJDIR)" -a ! -e "$(OBJDIR)" ];then mkdir -p $(OBJDIR); fi)
	$(shell if [ -n "$(BINDIR)" -a ! -e "$(BINDIR)" ];then mkdir -p $(BINDIR); fi)

/mnt/share/lib/linux/obj/log.o:/mnt/share/lib/src/log/log.cpp
	rm -f $@
	$(CXX) -fpic -g -c $(INCPATH) $< -o $@

/mnt/share/lib/linux/obj/logmanager.o:/mnt/share/lib/src/log/logmanager.cpp
	rm -f $@
	$(CXX) -fpic -g -c $(INCPATH) $< -o $@

